<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whaim.alarmnow.app" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.whaim.alarmnow.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.whaim.alarmnow.app.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.whaim.alarmnow.app.TestSettingsActivity"
            android:label="@string/title_activity_test_settings" >
        </activity>

        <receiver
            android:name="com.whaim.alarmnow.app.AlarmReceiver"
            android:process=":remote" />

        <activity
            android:name="com.whaim.alarmnow.app.AlarmAlertActivity"
            android:label="@string/title_activity_alarm_alert" >
        </activity>
    </application>

</manifest>
